<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen" />
	<style name="wrap_content">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="match_content">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	</style>
	
	<style name="table_cell" parent="table_cell_size">
	    <item name="android:layout_margin">@dimen/table_cell_margin</item>
	</style>
	
	<style name="table_cell_size">
	    <item name="android:layout_width">@dimen/table_cell_width</item>
	    <item name="android:layout_height">@dimen/table_cell_height</item>
	</style>
	
	<style name="table_cell_image_button" parent="table_cell_size">
	    <item name="android:scaleType">fitCenter</item>
	    <item name="android:onClick">onClick</item>
	    <item name="android:src">@drawable/launcher_selector</item>
	</style>
	
	<style name="action_bar_item_size">
	    <item name="android:layout_width">@dimen/action_bar_item_witdh</item>
	    <item name="android:layout_height">@dimen/action_bar_item_height</item>
	</style>
	
	<style name="action_bar_item" parent="wrap_content">
	    <item name="android:layout_margin">0dip</item>
	    <item name="android:src">@drawable/back_selector</item>
	</style>
	
	<style name="text_button_item" parent="wrap_content">
	    <item name="android:padding">5dip</item>
	    <item name="android:textColor">@drawable/text_selector</item>
	    <item name="android:textSize">@dimen/table_cell_image_text_size</item>
	</style>
	
	<style name="action_bar_back" parent="wrap_content">
	    <item name="android:background">@drawable/back_normal</item>
	    <item name="android:src">@drawable/back_selector</item>
	    <item name="android:layout_marginLeft">@dimen/button_margin_left_right</item>
	</style>
	
	<style name="action_bar_background">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@drawable/bar_background</item>
	</style>
	
	<style name="table_cell_image_text_view" parent="match_content">
	    <item name="android:textSize">@dimen/table_cell_image_text_size</item>
	    <item name="android:gravity">center_horizontal|bottom</item>
	    <item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>
	
</resources>